<Window x:Class="Presentacion.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentacion"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel>
            <ComboBox x:Name="cbEstudiante" Width="300" Margin="0,5" Text="Estudiante"/>
            <ComboBox x:Name="cbAnio" Width="300" Margin="0,5" Text="Año"/>
            <ComboBox x:Name="cbSemestre" Width="300" Margin="0,5" Text="Semestre"/>
            <ComboBox x:Name="cbGrupo" Width="300" Margin="0,5" Text="Grupo"/>
            <ListBox x:Name="lbMaterias" SelectionMode="Multiple" Width="300" Height="150" Margin="0,5"/>
            <Button Content="Inscribir Materias" Click="BtnInscribir_Click" Width="150" Margin="0,10"/>
        </StackPanel>
    </Grid>
</Window>
